<% if flash.any? %>
  <% flash.each do |type, msg| %>

    <% type = if type == "alert"
                "danger"
              elsif type == "notice"
                "success"
              else
                  type
              end
    %>

    <div class="alert alert-<%= type %> alert-dismissible fade show text-center" role="alert">
      <%= msg %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
<% end %>
